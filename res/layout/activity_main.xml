<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.blebenchmark.MainActivity">

    <LinearLayout 
    android:id="@+id/toprow_control" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent">

	    <TextView
	        android:id="@+id/banner"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="-- status msgs show up here --" />

    </LinearLayout>
    
    <LinearLayout 
    android:id="@+id/buttons_control" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent">
	    <Button
	        android:id="@+id/search"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="LOOK"
	        android:onClick="handleButtonLook"
	        android:enabled="true" />
	    
	    <Button
	        android:id="@+id/advert"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="SHOW"
	        android:onClick="handleButtonAdvertise"
	        android:enabled="true" />
	    
	    <Button
	        android:id="@+id/send"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="SEND"
	        android:onClick="handleButtonSend"
	        android:enabled="true" />
	    
	    <Button
	        android:id="@+id/getfile"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="PIC"
	        android:onClick="handleButtonLoadPic"
	        android:enabled="true" />
    
    </LinearLayout>
    
        <LinearLayout 
    android:id="@+id/test_parameters" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent"
    android:orientation="vertical">
	    
            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <RadioButton android:id="@+id/radio_notify"
					android:layout_height="wrap_content" 
    				android:layout_width="wrap_content"
                    android:text="Notify"
                    android:onClick="onRadioButtonClicked" />
                
                <RadioButton android:id="@+id/radio_indicate"
                    android:text="Indicate"
					android:layout_height="wrap_content" 
    				android:layout_width="wrap_content"
                    android:onClick="onRadioButtonClicked" />
                
                
            </RadioGroup>
            
        <Spinner
            android:id="@+id/msg_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/msg_size"
            android:prompt="@string/prompt_msg_size" />
	        
	    </LinearLayout>
	    
    <LinearLayout 
    android:id="@+id/bench_output" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent"
    android:orientation="vertical"
    >

	    <TextView
	        android:id="@+id/msg_details"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="-- message details --" />
        
        
	    <TextView
	        android:id="@+id/msg_start_receive"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="-- message start receive --" />
	    
	    <TextView
	        android:id="@+id/msg_stop_receive"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="-- message stop receive --" />

    </LinearLayout>

    <LinearLayout 
    android:id="@+id/img" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent"
    android:orientation="vertical"
    >

        <ImageView
            android:id="@+id/img_to_send"
    		android:layout_height="wrap_content" 
    		android:layout_width="wrap_content"
    		/>
            
        	    
</LinearLayout>
    
    
</LinearLayout>
