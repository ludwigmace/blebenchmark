<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.blebenchmark.MainActivity">

    <LinearLayout 
    android:id="@+id/toprow_control" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent">

	    <TextView
	        android:id="@+id/banner"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/hello_world" />

    </LinearLayout>
    
    <LinearLayout 
    android:id="@+id/buttons_control" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent">
	    <Button
	        android:id="@+id/search"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="LOOK"
	        android:onClick="handleButtonLook"
	        android:enabled="true" />
	    
	    <Button
	        android:id="@+id/advert"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="SHOW"
	        android:onClick="handleButtonAdvertise"
	        android:enabled="true" />
	    
	    <Button
	        android:id="@+id/send"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="SEND"
	        android:onClick="handleButtonSend"
	        android:enabled="true" />
    
    </LinearLayout>
    
    
    
</LinearLayout>
